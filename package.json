{
  "name": "@herbcaudill/crypto",
  "version": "3.0.7",
  "license": "MIT",
  "private": false,
  "author": {
    "name": "Herb Caudill",
    "email": "herb@devresults.com"
  },
  "description": "Wrapper functions for libsodium",
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "dependencies": {
    "@herbcaudill/base-x": "4",
    "@stablelib/utf8": "1",
    "fast-memoize": "2",
    "libsodium-wrappers": "0.7.10",
    "msgpack-lite": "0"
  },
  "devDependencies": {
    "@types/jest": "27",
    "@types/json-stable-stringify": "1",
    "@types/libsodium-wrappers": "0",
    "@types/msgpack-lite": "0",
    "@types/node": "16",
    "esbuild": "0",
    "jest": "27",
    "prettier": "2",
    "ts-jest": "27",
    "tslib": "1",
    "typescript": "4"
  },
  "jest": {
    "transform": {},
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  },
  "wallaby": {
    "autoDetect": true,
    "runMode": "onsave",
    "slowTestThreshold": 1000,
    "lowCoverageThreshold": 99,
    "hints": {
      "ignoreCoverageForFile": "/ignore file coverage/"
    },
    "env": {
      "type": "node",
      "params": {
        "runner": "--experimental-vm-modules"
      }
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  }
}
