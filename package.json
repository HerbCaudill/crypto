{
  "name": "@herbcaudill/crypto",
  "version": "4.0.0",
  "license": "MIT",
  "private": false,
  "author": {
    "name": "Herb Caudill",
    "email": "herb@devresults.com"
  },
  "description": "Wrapper functions for libsodium",
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:prod": "rimraf dist && tsc",
    "build:test": "rimraf dist && tsc -p tsconfig.test.json",
    "prepublishOnly": "pnpm test && pnpm build",
    "test:node": "pnpm build:test && pnpm aegir test -t node -f \"dist/**/*.test.{js,cjs,mjs}\" --cov -- --exit",
    "test:browser": "pnpm build:test && pnpm aegir test -t browser -f \"dist/**/*.test.{js,cjs,mjs}\" --cov",
    "test:electron-main": "pnpm build:test && pnpm aegir test -t electron-main -f \"dist/**/*.test.{js,cjs,mjs}\" --cov",
    "test": "pnpm build:test && pnpm test:node && pnpm test:browser && pnpm test:electron-main"
  },
  "dependencies": {
    "@herbcaudill/base-x": "4",
    "@stablelib/utf8": "1",
    "fast-memoize": "2",
    "libsodium-wrappers-sumo": "0.7.10",
    "msgpackr": "^1.8.5"
  },
  "devDependencies": {
    "@types/json-stable-stringify": "1",
    "@types/libsodium-wrappers-sumo": "0",
    "@types/mocha": "^10.0.6",
    "@types/node": "16",
    "aegir": "^41.1.9",
    "buffer": "^6.0.3",
    "esbuild": "0",
    "mocha": "^10.2.0",
    "prettier": "2",
    "rimraf": "^5.0.5",
    "tslib": "1",
    "typescript": "4"
  },
  "wallaby": {
    "autoDetect": true,
    "runMode": "onsave",
    "slowTestThreshold": 1000,
    "lowCoverageThreshold": 99,
    "hints": {
      "ignoreCoverageForFile": "/ignore file coverage/"
    },
    "env": {
      "type": "node",
      "params": {
        "runner": "--experimental-vm-modules"
      }
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  }
}
