{
  "name": "@herbcaudill/crypto",
  "version": "1.0.2",
  "license": "MIT",
  "private": false,
  "author": {
    "name": "Herb Caudill",
    "email": "herb@devresults.com"
  },
  "description": "Wrapper functions for TweetNaCl",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/crypto.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsdx build",
    "postbuild": "tscpaths -p tsconfig.json -s ./src -o ./dist --silent",
    "prepare": "npm run build",
    "start": "tsdx watch",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "dependencies": {
    "@stablelib/utf8": "1",
    "@types/libsodium-wrappers": "0",
    "base-x": "3",
    "json-stable-stringify": "1",
    "libsodium-wrappers": "0",
    "msgpack-lite": "0",
    "scrypt-js": "3",
    "tweetnacl": "1"
  },
  "devDependencies": {
    "@herbcaudill/tscpaths": "0",
    "@types/json-stable-stringify": "1",
    "@types/msgpack-lite": "0",
    "@types/node": "16",
    "jest": "27",
    "prettier": "2",
    "ts-jest": "27",
    "tsdx": "0",
    "tslib": "1",
    "typescript": "4",
    "v8-profiler-node8": "6"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "tsconfig": {
        "module": "esnext",
        "target": "es2022"
      },
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  }
}
